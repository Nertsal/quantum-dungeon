pub fn day(item) {
    if item.position.y == item.grid_bounds().high.y {
        item.turn_into("King's skull");
    }
}

pub fn active(item) {
    if let Some(target) = item.find_random(Filter::Category(Category::Spooky)) {
        item.swap_with(target);
    }
}

pub fn night(item) {
    item.emit_light_around(item.position, 0, 1);
}
