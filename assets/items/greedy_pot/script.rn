pub fn day(item) {
    if item.rng_float() < 0.1 {
        if let Some(victim) = item.find_nearby(1, Filter::Category(Category::Treasure)) {
            item.bonus_from(victim, Stats { damage: 2 }, true);
            victim.destroy();
        }
    }

    item.damage(Target::Random, |stats| stats.damage);
}
